---
import { logoBig, mapaUser } from "../assets";
import { contactInfo, idPages, services } from "../data";
import SectionLayout from "../layouts/SectionLayout.astro";
import SectionTitle from "./SectionTitle.astro";
import ServiceCard from "./ServiceCard.astro";
---

<SectionLayout id={idPages.services}>
  <SectionTitle title="Nuestros servicios" />
  <div
    class="grid grid-cols-1 md:grid-cols-2 gap-2 items-center justify-center"
  >
    {
      services.map((service) => (
        <ServiceCard
          title={service.title}
          description={service.description}
          image={service.image}
        />
      ))
    }
  </div>
  <div class="flex items-center justify-center">
    <div class="flex items-center justify-center w-4/6 flex-col lg:flex-row border-4 border-secondary rounded-lg">
      <img class="flex-2 h-52 rounded-l-lg" src={logoBig} alt="logo saludarte" />
      <div class="flex-1 flex flex-col justify-center items-center">
        <h2 class="text-zinc-900 text-5xl font-bold">Agenda tu cita</h2>
        <p class="text-zinc-900 text-4xl mt-6">üóìÔ∏è {contactInfo.phones[0]}</p>
      </div>
      <img class="flex-2 h-52 rounded-r-lg" src={mapaUser} alt="usuario mapa" />
    </div>
  </div>
</SectionLayout>
